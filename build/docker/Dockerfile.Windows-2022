FROM docker.io/library/golang:1.24.2-nanoserver-ltsc2022@sha256:08fd9b7279e7e202bd5fc6230af558f7952532a0f584fefd4cda8e4ccbde3dad AS base

COPY ./ /src
WORKDIR /src

FROM base AS builder
ARG CGO_ENABLED=0
ARG GOEXPERIMENT=boringcrypto
ARG BUILD_TAG="playground"
ARG BUILDER_VERSION="v0.123.0"
WORKDIR /src

RUN go install go.opentelemetry.io/collector/cmd/builder@${BUILDER_VERSION}
RUN builder --config=/src/distributions/k8s/manifest.yaml

FROM mcr.microsoft.com/windows/nanoserver:ltsc2022

COPY --from=builder /src/bin/solarwinds-otel-collector-k8s /solarwinds-otel-collector.exe

ENTRYPOINT ["solarwinds-otel-collector.exe"]
CMD ["--config=/opt/default-config.yaml"]


